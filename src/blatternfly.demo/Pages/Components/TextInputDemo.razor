@page "/components/text-input"

<Title HeadingLevel="HeadingLevel.h1" Size="TitleSizes.ExtraLarge4">Text input</Title>
<Title HeadingLevel="HeadingLevel.h2" Size="TitleSizes.ExtraLarge">Examples</Title>

<section class="example-section">
  <Title Size="TitleSizes.Large">Basic</Title>
  <TextInput @bind-Value="@_basicTextValue" Type="TextInputTypes.Text" AriaLabel="text input example" />
</section>

<section class="example-section">
  <Title Size="TitleSizes.Large">Disabled</Title>
  <TextInput @bind-Value="_disabledTextValue" AriaLabel="disabled text input example" IsDisabled="true" />
</section>

<section class="example-section">
  <Title Size="TitleSizes.Large">Read only</Title>
  <TextInput @bind-Value="_readonlyTextValue" IsReadOnly="true" AriaLabel="readonly input example" />
</section>

<section class="example-section">
  <Title Size="TitleSizes.Large">Invalid</Title>
  <TextInput @bind-Value="_invalidTextValue" IsRequired="true" Validated="ValidatedOptions.Error" AriaLabel="invalid text input example"/>
</section>

<section class="example-section">
  <Title Size="TitleSizes.Large">Icon variants</Title>
  <TextInput @bind-Value="_calendarTextValue" IconVariant="TextInputIconVariants.Calendar" AriaLabel="text input example" />
  <br />
  <br />
  <TextInput @bind-Value="_clockTextValue" IconVariant="TextInputIconVariants.Clock" AriaLabel="text input example" />
  <br />
  <br />
  <TextInput @bind-Value="_customTextValue" Type="TextInputTypes.Text" CustomIconDimensions="24px 24px" CustomIconUrl="@_customIconUrl" AriaLabel="text input example" />
</section>

@code {
  private string _basicTextValue;
  private string _disabledTextValue = "disabled text input example";
  private string _readonlyTextValue = "read only text input example";
