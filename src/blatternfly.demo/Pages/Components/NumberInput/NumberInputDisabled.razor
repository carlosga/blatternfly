<NumberInput
  @bind-Value="Value"
  Max="@MaxValue"
  OnMinus="@OnMinus"
  OnPlus="@OnPlus"
  InputName="input"
  InputAriaLabel="number input"
  MinusBtnAriaLabel="minus"
  PlusBtnAriaLabel="plus"
  IsDisabled
>
  <Unit>%</Unit>
</NumberInput>

@code {
  public decimal Value    { get; set; } = 100;
  public decimal MinValue { get; set; } = 0;
  public decimal MaxValue { get; set; } = 100;

  public void OnMinus(MouseEventArgs _) => --Value;
  public void OnPlus(MouseEventArgs _)  => ++Value;
}