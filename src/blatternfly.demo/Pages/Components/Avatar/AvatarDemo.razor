@page "/components/avatar"

<TextContent>
  <Title class="pf-u-mb-md">Avatar</Title>
  <Text class="pf-u-mb-md">
    An <strong>avatar</strong> is a visual used to represent a user.
  </Text>
  <Text class="pf-u-mb-md">
    See the <a target="_blank" href="https://www.patternfly.org/v4/components/avatar/design-guidelines">PatternFly design guidelines</a> for more details.
  </Text>
</TextContent>

<Flex>
  <FlexItem Component="nav" class="ws-toc">
    <Title Size="TitleSizes.Large">Table of contents</Title>
    <JumpLinks IsVertical ScrollableSelector=".pf-c-page__main" OffsetSelector=".pf-c-page__header">
      <JumpLinksItem Href="#examples">
        <ChildContent>Examples</ChildContent>
        <SubLists>
          <JumpLinksList>
            <JumpLinksItem Href="#basic">Basic</JumpLinksItem>
            <JumpLinksItem Href="#bordered-light">Bordered - light</JumpLinksItem>
            <JumpLinksItem Href="#bordered-dark">Bordered - dark</JumpLinksItem>
          </JumpLinksList>
        </SubLists>
      </JumpLinksItem>
    </JumpLinks>
  </FlexItem>
  <FlexItem Grow="@(new FlexGrow { Default = true })">
    <Title id="examples" Size="TitleSizes.Large">Examples</Title>

    <Snippet id="basic" Title="Basic">
      <AvatarBasic />
    </Snippet>

    <Snippet id="bordered-light" Title="Bordered - light">
      <AvatarBorderedLight />
    </Snippet>

    <Snippet id="bordered-dark" Title="Bordered - dark">
      <AvatarBorderedDark />
    </Snippet>
  </FlexItem>
</Flex>
