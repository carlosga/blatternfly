            <JumpLinksItem Href="#scrollable-with-header-and-footer">Scrollable with header and footer</JumpLinksItem>
          </JumpLinksList>
        </SubLists>
      </JumpLinksItem>
    </JumpLinks>
  </FlexItem>
  <FlexItem Grow="@(new FlexGrow { Default = true })">
    <Title id="examples" Size="TitleSizes.Large">Examples</Title>

    <Snippet id="basic" Title="Basic">
      <PanelBasic />
    </Snippet>

    <Snippet id="header" Title="Header">
      <PanelWithHeader />
    </Snippet>

    <Snippet id="footer" Title="Footer">
      <PanelWithFooter />
    </Snippet>

    <Snippet id="header-and-footer" Title="Header and Footer">
      <PanelWithHeaderAndFooter />
