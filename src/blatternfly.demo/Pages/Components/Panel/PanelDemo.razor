    <Snippet id="raised" Title="Raised">
      <PanelRaised />
    </Snippet>

    <Snippet id="bordered" Title="Bordered">
      <PanelBordered />
    </Snippet>

    <Snippet id="scrollable" Title="Scrollable">
      <PanelScrollable />
    </Snippet>

    <Snippet id="scrollable-with-header-and-footer" Title="Scrollable with header and footer">
      <PanelScrollableWithHeaderAndFooter />
    </Snippet>
  </FlexItem>
</Flex>