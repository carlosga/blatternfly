<div style="margin-top: 30px">
  <Checkbox
    label="Display size large"
    Value="@IsDisplayLarge"
    ValueChanged="@ToggleDisplayLarge"
    AriaLabel="show display large variation checkbox"
    id="toggle-display-lg"
    name="toggle-display-lg"
  />
</div>

@code {
  private bool IsDisplayLarge { get; set; }
  private DisplaySize DisplaySize { get => IsDisplayLarge ? DisplaySize.Large : DisplaySize.Default; }

  private void ToggleDisplayLarge(bool value)
  {
    IsDisplayLarge = value;
    StateHasChanged();
  }
}