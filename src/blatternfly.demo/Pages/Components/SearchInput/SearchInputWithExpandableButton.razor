<SearchInput
  Placeholder="Find by name"
  Value="@Value"
  OnChange="@OnChange"
  OnClear="@OnClear"
  ExpandableInput="true"
  IsExpanded="@IsExpanded"
  OnToggleExpand="@OnToggleExpand"
  ToggleAriaLabel="Expandable search input toggle"
/>

@code {
  public string Value      { get; set; }
  public bool   IsExpanded { get; set; }

  public void OnChange(ChangeEventArgs args) => Value = args.Value as string;
  public void OnClear() => Value = string.Empty;
  public void OnToggleExpand(bool isExpanded)
  {
    IsExpanded = !isExpanded;
  }
}