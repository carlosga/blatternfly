<div style="margin-bottom: 12px">
<Checkbox id="isCompact" Label="Compact" @bind-Value="@IsCompact" />
<Checkbox id="isFlat" Label="Flat" @bind-Value="@IsFlat" />
<Checkbox id="isRounded" Label="Rounded" @bind-Value="@IsRounded" />
<Checkbox id="isLarge" Label="Large" @bind-Value="@IsLarge" />
<Checkbox id="isFullHeight" Label="Full Height" @bind-Value="@IsFullHeight" />
<Checkbox id="isPlain" Label="Plain" @bind-Value="@IsPlain" />
</div>
<div style="height: 15rem">
<Card
    IsCompact    = "@IsCompact"
    IsFlat       = "@IsFlat"
    IsRounded    = "@IsRounded"
    IsLarge      = "@IsLarge"
    IsFullHeight = "@IsFullHeight"
    IsPlain      = "@IsPlain"
>
    <CardTitle>Header</CardTitle>
    <CardBody>Body</CardBody>
    <CardFooter>Footer</CardFooter>
</Card>
</div>

@code {
  public bool IsHoverable  { get; set; }
  public bool IsCompact    { get; set; }
  public bool IsFlat       { get; set; }
  public bool IsRounded    { get; set; }
  public bool IsLarge      { get; set; }
  public bool IsFullHeight { get; set; }
  public bool IsPlain      { get; set; }
}
