      <CardHeaderInCardHead />
    </section>

    <section id="only-actions-in-card-head" class="example-section">
      <Title Size="TitleSizes.Large">Only actions in card head (no header/footer)</Title>
      <CardOnlyActionsInCardHeadNoHeaderFooter />
    </section>

    <section id="only-image-in-the-card-head" class="example-section">
