  <FlexItem Grow="@(new FlexGrow { Default = true })">
    <Title id="examples" Size="TitleSizes.Large">Examples</Title>

    <section id="basic" class="example-section">
      <Title Size="TitleSizes.Large">Basic</Title>
      <CardBasic />
    </section>

    <section id="modifiers" class="example-section">
      <Title Size="TitleSizes.Large">Modifiers</Title>
      <CardModifiers />
    </section>

    <section id="with-image-and-actions" class="example-section">
