@page "/components/label"

<TextContent>
  <Title class="pf-u-mb-md">Label</Title>
  <Text class="pf-u-mb-md">
    A <strong>label</strong> highlights an element on a page to draw attention to it or make it more searchable.
  </Text>
  <Text class="pf-u-mb-md">
    See the <a target="_blank" href="https://www.patternfly.org/v4/components/label/design-guidelines">PatternFly design guidelines</a> for more details.
  </Text>
</TextContent>

<Flex>
  <FlexItem Component="nav" class="ws-toc">
    <Title Size="TitleSizes.Large">Table of contents</Title>
    <JumpLinks IsVertical ScrollableSelector=".pf-c-page__main" OffsetSelector=".pf-c-page__header">
      <JumpLinksItem Href="#examples">
        <ChildContent>Examples</ChildContent>
        <SubLists>
          <JumpLinksList>
            <JumpLinksItem Href="#filled">Filled</JumpLinksItem>
            <JumpLinksItem Href="#outline">Outline</JumpLinksItem>
            <JumpLinksItem Href="#compact">Compact</JumpLinksItem>
            <JumpLinksItem Href="#router-Link">Router Link</JumpLinksItem>
          </JumpLinksList>
        </SubLists>
      </JumpLinksItem>
    </JumpLinks>
  </FlexItem>
  <FlexItem Grow="@(new FlexGrow { Default = true })">
    <Title id="examples" Size="TitleSizes.Large">Examples</Title>

    <section id="filled" class="example-section">
      <Title Size="TitleSizes.Large">Filled</Title>
      <LabelFilled />
    </section>

    <section id="outline" class="example-section">
      <Title Size="TitleSizes.Large">Outline</Title>
      <LabelOutline />
    </section>

    <section id="compact" class="example-section">
      <Title Size="TitleSizes.Large">Compact</Title>
      <LabelCompact />
    </section>

    <section id="router-Link" class="example-section">
      <Title Size="TitleSizes.Large">Router Link</Title>
      <LabelRouterLink />
    </section>
  </FlexItem>
</Flex>