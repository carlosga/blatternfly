@page "/components/dropdown"

<Title HeadingLevel="HeadingLevel.h1" Size="TitleSizes.ExtraLarge4">Dropdown</Title>
<Title HeadingLevel="HeadingLevel.h2" Size="TitleSizes.ExtraLarge">Examples</Title>

<section class="example-section">
  <Title Size="TitleSizes.Large">Basic</Title>
  <Dropdown>
    <Toggle>
      <DropdownToggle id="toggle-id">
        <ToggleIndicator>
          <CaretDownIcon />
        </ToggleIndicator>
        <ChildContent>Dropdown</ChildContent>
      </DropdownToggle>
    </Toggle>
    <DropdownItems>
      <DropdownItem @key="1">Link</DropdownItem>
      <DropdownItem @key="2" Component="button">Action</DropdownItem>
      <DropdownItem @key="3" href="www.google.com" IsDisabled>Disabled link</DropdownItem>
      <DropdownItem @key="4" Component="button" IsAriaDisabled="true">Disabled action</DropdownItem>
      <DropdownSeparator @key="5" />
      <DropdownItem @key="6">Separated link</DropdownItem>
      <DropdownItem @key="7" Component="button">Separated action</DropdownItem>
    </DropdownItems>
  </Dropdown>
</section>

