  private Alignment Alignments
  {
    get => new() 
    {
      Small       = Blatternfly.Alignments.Left,
      Medium      = Blatternfly.Alignments.Right,
      Large       = Blatternfly.Alignments.Left,
      ExtraLarge  = Blatternfly.Alignments.Right,
      ExtraLarge2 = Blatternfly.Alignments.Left
    };
  }
}