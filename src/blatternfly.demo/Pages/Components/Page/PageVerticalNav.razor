<Page>
  <Header>
    <Masthead>
      <MastheadToggle>
        <PageToggleButton
          AriaLabel="Global navigation"
          IsNavOpen="@IsNavOpen"
          OnNavToggle="@OnNavToggle"
        >
          <BarsIcon />
        </PageToggleButton>
      </MastheadToggle>
      <MastheadMain>
        <MastheadBrand href="https://patternfly.org" target="_blank">
          Logo
        </MastheadBrand>
      </MastheadMain>
      <MastheadContent>
        <Toolbar id="vertical-nav-toolbar">
          <ToolbarContent>
            <ToolbarItem>header-tools</ToolbarItem>
          </ToolbarContent>
        </Toolbar>
      </MastheadContent>
    </Masthead>
  </Header>
  <Sidebar>
    <PageSidebar nav="Navigation" IsNavOpen="@IsNavOpen"></PageSidebar>
  </Sidebar>
  <Content>
    <PageSection Variant="PageSectionVariants.Darker">Section with darker background</PageSection>
    <PageSection Variant="PageSectionVariants.Dark">Section with dark background</PageSection>
    <PageSection Variant="PageSectionVariants.Light">Section with light background</PageSection>
  </Content>
</Page>

@code {
  public bool IsNavOpen { get; set; } = true;

  public void OnNavToggle(bool value)
  {
    IsNavOpen = value;
  }
}