@page "/components/checkbox"

<Title HeadingLevel="HeadingLevel.h1" Size="TitleSizes.ExtraLarge4">Checkbox</Title>
<Title HeadingLevel="HeadingLevel.h2" Size="TitleSizes.ExtraLarge">Examples</Title>

<section class="example-section">
  <Title Size="TitleSizes.Large">Controlled checkbox</Title>
  <Checkbox
      Label="Parent CheckBox"
      Value="@_check1"
      AriaLabel="controlled checkbox example"
      id="check-1"
      name="check1"
  />
  <Checkbox
      class="nested"
      Label="Child CheckBox 1"
      Value="@_check2"
      AriaLabel="controlled checkbox example"
      id="check-2"
      name="check2"
  />
  <Checkbox
      class="nested"
      Label="Child CheckBox 2"
      Value="@_check3"
      AriaLabel="controlled checkbox example"
      id="check-3"
      name="check3"
  />
  <Checkbox
      Label="Controlled CheckBox"
      Value="@_check4"
      AriaLabel="controlled checkbox example"
      id="check-4"
      name="check4"
  />
</section>

@code {
    private bool _check1 = false;
    private bool _check2 = false;
    private bool _check3 = false;
    private bool _check4 = false;
}