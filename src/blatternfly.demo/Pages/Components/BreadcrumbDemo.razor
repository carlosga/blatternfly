@page "/components/breadcrumb"

<TextContent>
  <Title class="pf-u-mb-md">Breadcrumb</Title>
  <Text class="pf-u-mb-md">
    A <strong>breadcrumb</strong> provides page context to help users navigate more efficiently and understand where they are in the application hierarchy.
  </Text>
  <Text class="pf-u-mb-md">
    See the <a target="_blank" href="https://www.patternfly.org/v4/components/breadcrumb/design-guidelines">PatternFly design guidelines</a> for more details.
  </Text>
</TextContent>

<section class="example-section">
  <Title Size="TitleSizes.Large">Simple breadcrumb</Title>
  <Breadcrumb>
    <BreadcrumbItem To="#">Section home</BreadcrumbItem>
    <BreadcrumbItem To="#">Section title</BreadcrumbItem>
    <BreadcrumbItem To="#">Section title</BreadcrumbItem>
    <BreadcrumbItem To="/components/breadcrumb" IsActive>
      Section landing
    </BreadcrumbItem>
  </Breadcrumb>
</section>

<section class="example-section">
  <Title Size="TitleSizes.Large">Breadcrumb without home link</Title>
  <Breadcrumb>
    <BreadcrumbItem>Section Home</BreadcrumbItem>
    <BreadcrumbItem To="#">Section title</BreadcrumbItem>
    <BreadcrumbItem To="#">Section title</BreadcrumbItem>
    <BreadcrumbItem To="#">Section title</BreadcrumbItem>
    <BreadcrumbItem To="#">Section title</BreadcrumbItem>
    <BreadcrumbItem To="/components/breadcrumb" IsActive>
      Section landing
    </BreadcrumbItem>
  </Breadcrumb>
</section>

<section class="example-section">
  <Title Size="TitleSizes.Large">Breadcrumb with heading</Title>
  <Breadcrumb>
    <BreadcrumbItem To="#">Section home</BreadcrumbItem>
    <BreadcrumbItem To="#">Section title</BreadcrumbItem>
    <BreadcrumbItem To="#">Section title</BreadcrumbItem>
    <BreadcrumbItem To="#">Section title</BreadcrumbItem>
    <BreadcrumbHeading To="#">Section landing</BreadcrumbHeading>
  </Breadcrumb>
</section>

<section class="example-section">
  <Title Size="TitleSizes.Large">With dropdown</Title>
  <Breadcrumb>
    <BreadcrumbItem Component="button">Section home</BreadcrumbItem>
    <BreadcrumbItem IsDropdown>
      <Dropdown IsOpen="@IsOpen">
        <Toggle>
          <BadgeToggle id="toggle-id" IsRead OnToggle="OnToggle">3</BadgeToggle>
        </Toggle>
        <DropdownItems>
          <DropdownItem Key="edit" Component="button">
            <Icon><AngleLeftIcon /></Icon>
            <ChildContent>Edit</ChildContent>
          </DropdownItem>
          <DropdownItem Key="action" Component="button">
            <Icon><AngleLeftIcon /></Icon>
            <ChildContent>Deployment</ChildContent>
          </DropdownItem>
          <DropdownItem Key="apps" Component="button">
            <Icon><AngleLeftIcon /></Icon>
            <ChildContent>Applications</ChildContent>
          </DropdownItem>
        </DropdownItems>
      </Dropdown>
    </BreadcrumbItem>
    <BreadcrumbHeading Component="button">Section title</BreadcrumbHeading>
  </Breadcrumb>
</section>

@code {
  private bool IsOpen { get; set; }

  private void OnToggle()
  {
    IsOpen = !IsOpen;
    StateHasChanged();
  }
}