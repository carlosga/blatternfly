<Form Model="@FormModel" IsHorizontal="true">
  <FormGroup
    Label="Label"
    HasNoPaddingTop
    FieldId="options"
    IsStack
    IsHelperTextBeforeField="true"
    HelperText="Select all that apply:"
    Role="group"
  >
    <Checkbox Label="Option 1" id="option-02-01" @bind-Value="FormModel.Check1" />
    <Checkbox Label="Option 2" id="option-02-02" @bind-Value="FormModel.Check2" />
  </FormGroup>
</Form>

@code {
  public MixModel FormModel { get; set; } = new();
}