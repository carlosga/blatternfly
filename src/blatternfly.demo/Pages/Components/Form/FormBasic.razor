<Form Model="@FormModel">
  <FormGroup
    Label="Full name"
    IsRequired
    FieldId="simple-form-name-01"
    HelperText="Include your middle name if you have one."
  >
    <LabelIcon>
      <Popover
        id="simple-form-name-01-popover"
        Reference="simple-form-name-01-popover-reference"
        IsVisible="@IsNamePopoverVisible"
        OnHidden="@OnNamePopoverHidden"
        Position="PopoverPosition.Auto"
      >
        <HeaderContent>
          <div>
            The
            <Text Component="TextVariants.a" href="https://schema.org/name" target="_blank">name</Text>
            of a
            <Text Component="TextVariants.a" href="https://schema.org/Person" target="_blank">Person</Text>
          </div>
        </HeaderContent>
        <BodyContent>
          <div>
            Often composed of
            <Text Component="TextVariants.a" href="https://schema.org/givenName" target="_blank">givenName</Text>
            and
            <Text Component="TextVariants.a" href="https://schema.org/familyName" target="_blank">familyName</Text>
            .
          </div>
        </BodyContent>
        <ChildContent>
          <button
            id="simple-form-name-01-popover-reference"
            type="button"
            aria-label="More info for name field"
            @onclick="@ToggleNamePopover"
            aria-describedby="simple-form-name-01"
            class="pf-c-form__group-label-help"
          >
            <HelpIcon noVerticalAlign />
          </button>
        </ChildContent>
      </Popover>
    </LabelIcon>
    <ChildContent>
      <TextInput
        IsRequired
        id="simple-form-name-01"
        name="simple-form-name-01"
        aria-describedby="simple-form-name-01-helper"
        @bind-Value="FormModel.Name"
      />
    </ChildContent>
  </FormGroup>
  <FormGroup
    Label="Email"
    IsRequired
    FieldId="simple-form-email-01"
  >
    <TextInput
      IsRequired
      Type="TextInputTypes.Email"
      id="simple-form-email-01"
      name="simple-form-email-01"
      @bind-Value="FormModel.Email"
    />
  </FormGroup>
  <FormGroup
    Label="Phone number"
    IsRequired
    FieldId="simple-form-number-01"
  >
    <TextInput
      IsRequired
      Type="TextInputTypes.Tel"
      id="simple-form-number-01"
      placeholder="555-555-5555"
      name="simple-form-number-01"
      @bind-Value="FormModel.Phone"
    />
  </FormGroup>
  <FormGroup
    IsInline
    FieldId="simple-form-checkbox-group"
    Label="How can we contact you?"
    IsRequired
  >
    <Checkbox
      Label="Email"
      AriaLabel="Email"
      id="inlinecheck01"
      @bind-Value="FormModel.ContactEmail"
    />
    <Checkbox
      Label="Phone"
      AriaLabel="Phone"
      id="inlinecheck02"
      @bind-Value="FormModel.ContactPhone"
    />
    <Checkbox
      Label="Please don't contact me."
      AriaLabel="Please don't contact me."
      id="inlinecheck03"
      @bind-Value="FormModel.DisallowContact"
    />
  </FormGroup>
  <FormGroup Label="Additional note" FieldId="simple-form-note-01">
    <TextInput
      IsDisabled
      id="simple-form-note-01"
      name="simple-form-number"
      @bind-Value="FormModel.Notes"
    />
  </FormGroup>
  <FormGroup FieldId="checkbox01">
    <Checkbox
      Label="I'd like updates via email"
      id="checkbox01"
      name="checkbox01"
      AriaLabel="Update via email"
      @bind-Value="FormModel.EmailUpdates"/>
  </FormGroup>
  <ActionGroup>
    <Button Variant="ButtonVariant.Primary">Submit</Button>
    <Button Variant="ButtonVariant.Link">Cancel</Button>
  </ActionGroup>
</Form>

@code {
  public BasicModel FormModel { get; set; } = new();

  private bool IsNamePopoverVisible { get; set; }

  private void ToggleNamePopover(MouseEventArgs _) => IsNamePopoverVisible = !IsNamePopoverVisible;
  private void OnNamePopoverHidden() => IsNamePopoverVisible = false;
}