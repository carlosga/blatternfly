            <JumpLinksItem Href="#compact">Compact</JumpLinksItem>
            <JumpLinksItem Href="#basic-with-an-issue">Basic with an issue</JumpLinksItem>
            <JumpLinksItem Href="#basic-with-a-failure">Basic with a failure</JumpLinksItem>
            <JumpLinksItem Href="#basic-with-patternfly-icons">Basic with Patternfly icons</JumpLinksItem>
          </JumpLinksList>
        </SubLists>
      </JumpLinksItem>
    </JumpLinks>
  </FlexItem>
  <FlexItem Grow="@(new FlexGrow { Default = true })">
    <Title id="examples" Size="TitleSizes.Large">Examples</Title>

    <section id="basic" class="example-section">
      <Title Size="TitleSizes.Large">Basic</Title>
      <ProgressStepperBasic />
    </section>

    <section id="basic-with-descriptions" class="example-section">
      <Title Size="TitleSizes.Large">Basic with descriptions</Title>
      <ProgressStepperBasicWithDescriptions />
    </section>

    <section id="center-aligned-with-descriptions" class="example-section">
      <Title Size="TitleSizes.Large">Center aligned with descriptions</Title>
      <ProgressStepperCenterAlignedWithDescriptions />
    </section>

    <section id="vertical-with-descriptions" class="example-section">
      <Title Size="TitleSizes.Large">Vertical with descriptions</Title>
      <ProgressStepperVerticalWithDescriptions />
    </section>

    <section id="compact" class="example-section">
      <Title Size="TitleSizes.Large">Compact</Title>
      <ProgressStepperCompact />
    </section>

    <section id="basic-with-an-issue" class="example-section">
      <Title Size="TitleSizes.Large">Basic with an issue</Title>
      <ProgressStepperBasicWithAnIssue />
    </section>

    <section id="basic-with-a-failure" class="example-section">
      <Title Size="TitleSizes.Large">Basic with a failure</Title>
      <ProgressStepperBasicWithAFailure />
    </section>

    <section id="basic-with-patternfly-icons" class="example-section">
      <Title Size="TitleSizes.Large">Basic with PatternFly icons</Title>
      <ProgressStepperBasicWithPatternFlyIcons />
    </section>
