<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <!-- <Nullable>enable</Nullable> -->
    <AssemblyName>Blatternfly</AssemblyName>
    <RootNamespace>Blatternfly</RootNamespace>
    <AssemblyVersion>0.4.1</AssemblyVersion>
    <FileVersion>0.4.1</FileVersion>
    <Copyright>2021 - Carlos Guzmán Álvarez</Copyright>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>Blatternfly</PackageId>
    <Version>0.4.1</Version>
    <Authors>Carlos Guzmán Álvarez</Authors>
    <Title>Blatternfly</Title>
    <PackageTags>blazor;blazor-components;blazor-wasm;blazor-webassembly;wasm;patternfly</PackageTags>
    <Description>PatternFly components ported to Blazor</Description>
    <PackageProjectUrl>https://github.com/carlosga/blatternfly</PackageProjectUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <RepositoryUrl>https://github.com/carlosga/blatternfly</RepositoryUrl>
    <RepositoryType>GIT</RepositoryType>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
  </PropertyGroup>

  <PropertyGroup>
    <DebugType Condition=" '$(Configuration)' == 'Release' ">None</DebugType>
  </PropertyGroup>

  <ItemGroup>
    <SupportedPlatform Include="Browser" />
  </ItemGroup>

  <ItemGroup>
    <None Include="../../LICENSE" Pack="true" Visible="false" PackagePath="" />
    <None Include="../../README.md" Pack="true" Visible="false" PackagePath="" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="5.0.10" />
    <PackageReference Include="System.Reactive" Version="5.0.0" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="wwwroot\focus-trap" />
    <Folder Include="wwwroot\tabbable" />
  </ItemGroup>

</Project>
