@namespace Blatternfly.Components
@inherits ImageComponentBase

<img
  alt="@AlternateText"
  class="pf-c-avatar @BorderClass"
  src="@Source"
  @attributes="AdditionalAttributes"
/>

@code {
  /// Border to add.
  [Parameter] public AvatarBorder? Border { get; set; }

  private string BorderClass
  {
    get => Border switch
    {
      AvatarBorder.Light => "pf-m-light",
      AvatarBorder.Dark  => "pf-m-dark",
      _                  => null
    };
  }
}
