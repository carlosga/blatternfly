@namespace Blatternfly.Components
@inherits BaseComponent

<img
  alt="@AlternateText"
  class="pf-c-avatar @BorderClass"
  src="@Source"
  @attributes="AdditionalAttributes"
/>

@code {
  /// Attribute that specifies the URL of the image for the Avatar.
  [Parameter] public string Source { get; set; } = string.Empty;

  /// Attribute that specifies the alternate text of the image for the Avatar.
  [Parameter] public string AlternateText { get; set; }  
  
  /// Border to add.
  [Parameter] public AvatarBorder? Border { get; set; }

  private string BorderClass
  {
    get => Border switch
    {
      AvatarBorder.Light => "pf-m-light",
      AvatarBorder.Dark  => "pf-m-dark",
      _                  => null
    };
  }
}
