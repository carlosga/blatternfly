@namespace Blatternfly.Components

<CascadingValue Value="this" IsFixed="true">
  @ChildContent
</CascadingValue>

@code {
  /// Additional attributes that will be applied to the component.
  [Parameter(CaptureUnmatchedValues = true)] public IReadOnlyDictionary<string, object> AdditionalAttributes { get; set; }

  /// Content rendered inside the component.
  [Parameter] public RenderFragment ChildContent { get; set; }

  /// Callback called when an MenuItems's action button is clicked. You can also specify it within a MenuItemAction.
  [Parameter] public EventCallback<(MenuItemAction, MouseEventArgs)> OnActionClick { get; set; }

  internal async Task ActionClicked(MenuItemAction action, MouseEventArgs args)
  {
    await OnActionClick.InvokeAsync((action, args));
  }
}