@namespace Blatternfly.Components
@inherits BaseComponent

<button
  @attributes="AdditionalAttributes"
  class="pf-c-dropdown__toggle-button @InternalCssClass"
  disabled="@DisabledValue"
  aria-disabled="@AriaDisabledValue"
  @onclick="OnClick"
  @onclick:stopPropagation="true"
>
  @ChildContent
</button>

@code {
  // Flag to show if the action button is disabled.
  [Parameter] public bool IsDisabled { get; set; }

  /// A callback for when the action button is clicked.
  [Parameter] public EventCallback<MouseEventArgs> OnClick { get; set; }
  
  private string DisabledValue     { get => IsDisabled ? "true" : null; }
  private string AriaDisabledValue { get => IsDisabled ? "true" : null; }
}