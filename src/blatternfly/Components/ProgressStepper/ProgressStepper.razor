@namespace Blatternfly.Components

<ol
  @attributes="AdditionalAttributes"
  class="@CssClass"
>
  @ChildContent
</ol>

@code {
  /// Additional attributes that will be applied to the component.
  [Parameter(CaptureUnmatchedValues = true)] public IReadOnlyDictionary<string, object> AdditionalAttributes { get; set; }

  /// Content rendered inside the component.
  [Parameter] public RenderFragment ChildContent { get; set; }

  /// Flag indicating the progress stepper should be centered.
  [Parameter] public bool IsCenterAligned { get; set; }

  /// Flag indicating the progress stepper has a vertical layout.
  [Parameter] public bool IsVertical { get; set; }

  /// Flag indicating the progress stepper should be rendered compactly.
  [Parameter] public bool IsCompact { get; set; }

  private string CssClass => new CssBuilder("pf-c-progress-stepper")
    .AddClass("pf-m-center"   , IsCenterAligned)
    .AddClass("pf-m-vertical" , IsVertical)
    .AddClass("pf-m-compact"  , IsCompact)
    .AddClassFromAttributes(AdditionalAttributes)
    .Build();
}