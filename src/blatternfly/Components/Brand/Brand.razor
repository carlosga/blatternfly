@namespace Blatternfly.Components

@if (ChildContent is not null)
{
  <picture @attributes="AdditionalAttributes" class="@CssClass" style="@CssStyle">
    @ChildContent
    <img src="@Src" alt="@Alt" />
  </picture>
}
else
{
  <img @attributes="AdditionalAttributes" class="@CssClass" src="@Src" alt="@Alt" />
}
