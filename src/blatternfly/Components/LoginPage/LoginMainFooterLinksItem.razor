@namespace Blatternfly.Components

<li @attributes="AdditionalAttributes" class="@CssClass">
  <a class="pf-c-login__main-footer-links-item-link" href="@Href" target="@Target">
    @ChildContent
  </a>
</li>

@code {
  /// Additional attributes that will be applied to the component.
  [Parameter(CaptureUnmatchedValues = true)] public IReadOnlyDictionary<string, object> AdditionalAttributes { get; set; }

  /// Content rendered inside the component.
  [Parameter] public RenderFragment ChildContent { get; set; }

  /// HREF for Footer Link Item.
  [Parameter] public string Href { get; set; }

  /// Target for Footer Link Item.
  [Parameter] public string Target { get; set; }

  private string CssClass => new CssBuilder("pf-c-login__main-footer-links-item")
    .AddClassFromAttributes(AdditionalAttributes)
    .Build();
}