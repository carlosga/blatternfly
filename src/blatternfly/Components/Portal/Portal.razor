@namespace Blatternfly.Components
@inherits BaseComponent
@implements IDisposable
@inject IPortalConnector Connector

@code {
  private bool _isOpen;
  
  [Parameter] 
  public bool IsOpen
  {
    get => _isOpen;
    set
    {
      _isOpen = value;
      if (_isOpen)
      {
        _ = Connector.Attach(this);
      }
      else
      {
        _ =Connector.Detach(this);
      }
    }
  }
  
  public void Dispose()
  {
    _ = Connector?.Detach(this);
  }
}