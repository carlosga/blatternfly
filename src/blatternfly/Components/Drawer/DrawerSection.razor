@namespace Blatternfly.Components
@inherits BaseComponent

<div class="@CssClass" @attributes="AdditionalAttributes">
  @ChildContent
</div>

@code  {
  /// Color variant of the background of the drawer Section.
  [Parameter] public DrawerColorVariant ColorVariant { get; set; } = DrawerColorVariant.Default;

  private string CssClass => new CssBuilder("pf-c-drawer__section")
    .AddClass("pf-m-light-200", ColorVariant == DrawerColorVariant.Light200)
    .Build();
}