@namespace Blatternfly.Components
@inherits BaseComponent

<span class="@CssClass" @attributes="AdditionalAttributes">@ChildContent</span>

@code {
  /// Adds styling to the badge to indicate it has been read.
  [Parameter] public bool IsRead { get; set; }
  
  private CssBuilder CssClass => new CssBuilder("pf-c-badge")
    .AddClass("pf-m-read"   , when: IsRead)
    .AddClass("pf-m-unread" , when: !IsRead);
}