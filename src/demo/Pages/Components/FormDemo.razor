<section class="example-section">
  <Title Size="TitleSizes.Large">Basic</Title>
  <Form Model="@_model1">
    <FormGroup Label="Name" IsRequired="true" FieldId="simple-form-name-01" HelperText="Please provide your full name">
      <TextInput
        IsRequired="true"
        id="simple-form-name-01"
        name="simple-form-name-01"
        aria-describedby="simple-form-name-01-helper"
        @bind-Value="_model1.Name"
      />
    </FormGroup>
    <FormGroup Label="Email" IsRequired="true" FieldId="simple-form-email-01">
      <TextInput
        IsRequired="true"
        Type="TextInputTypes.Email"
        id="simple-form-email-01"
        name="simple-form-email-01"
        @bind-Value="_model1.Email"
      />
    </FormGroup>
    <FormGroup Label="Phone number" IsRequired="true" FieldId="simple-form-number-01">
      <TextInput
        IsRequired="true"
        Type="TextInputTypes.Tel"
        id="simple-form-number-01"
        placeholder="555-555-5555"
        name="simple-form-number-01"
        @bind-Value="_model1.Phone"
      />
    </FormGroup>
    <FormGroup IsInline="true" FieldId="simple-form-checkbox-group" Label="How can we contact you?" IsRequired="true">
      <Checkbox Label="Email" AriaLabel="Email" id="inlinecheck01" @bind-Value="_model1.ContactEmail"/>
      <Checkbox Label="Phone" AriaLabel="Phone" id="inlinecheck02" @bind-Value="_model1.ContactPhone"/>
      <Checkbox Label="Please don't contact me" AriaLabel="Please don't contact me" id="inlinecheck03" @bind-Value="_model1.DisallowContact"/>
    </FormGroup>
    <FormGroup Label="Additional Note" FieldId="simple-form-note-01">
      <TextInput IsDisabled="true" id="simple-form-note-01" name="simple-form-number" @bind-Value="_model1.Notes"/>
    </FormGroup>
    <FormGroup FieldId="checkbox01">
      <Checkbox
        Label="I'd like updates via email"
        id="checkbox01"
        name="checkbox01"
        AriaLabel="Update via email"
        @bind-Value="_model1.EmailUpdates"/>
    </FormGroup>
    <ActionGroup>
      <Button Variant="ButtonVariant.Primary">Submit form</Button>
      <Button Variant="ButtonVariant.Link">Cancel</Button>
    </ActionGroup>
  </Form>
</section>

<section class="example-section">
