<section class="example-section">
  <Title Size="TitleSizes.Large">Invalid with form alert</Title>
  <Form Model="@_ageModel2">
    @if (_ageModel2.Validated == ValidatedOptions.Error)
    {
      <FormAlert>
        <Alert
          Variant="AlertVariant.Danger"
          Title="You must fill out all required fields before you can proceed."
          aria-live="polite"
          IsInline="true"
        />
      </FormAlert>
    }
    <FormGroup
      Label="Age"
      HelperText="Please enter your age"
      HelperTextHidden="@(_ageModel2.Validated.HasValue)"
      HelperTextInvalid="Age has to be a number"
      FieldId="age-1"
      Validated="@_ageModel2.Validated"
      type="number"
    >
      <HelperTextInvalidIcon><ExclamationCircleIcon /></HelperTextInvalidIcon>
      <HelperTextIcon><ExclamationCircleIcon /></HelperTextIcon>
      <ChildContent>
        <TextInput
          Validated="@_ageModel2.Validated"
          @bind-Value="_ageModel2.Value"
          @bind-Value:event="_ageModel2.OnAgeChanged"
          id="age-1"
          aria-describedby="age-1-helper"
        />
      </ChildContent>
    </FormGroup>
  </Form>
</section>

