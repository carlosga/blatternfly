@page "/components/dropdown"

<Title HeadingLevel="HeadingLevel.h1" Size="TitleSizes.ExtraLarge4">Dropdown</Title>
<Title HeadingLevel="HeadingLevel.h2" Size="TitleSizes.ExtraLarge">Examples</Title>

<section class="example-section">
  <Title Size="TitleSizes.Large">Basic</Title>
  <Dropdown>
    <Toggle>
      <DropdownToggle id="toggle-id">
        <ToggleIndicator>
          <CaretDownIcon />
        </ToggleIndicator>
        <ChildContent>Dropdown</ChildContent>
      </DropdownToggle>
    </Toggle>
    <DropdownItems>
      <DropdownItem Key="link">Link</DropdownItem>
      <DropdownItem Key="action" Component="button">Action</DropdownItem>
      <DropdownItem Key="disabled link" href="www.google.com" IsDisabled="true">Disabled Link</DropdownItem>
      <DropdownItem Key="disabled action" Component="button" IsDisabled="true">Disabled Action</DropdownItem>
      <DropdownSeparator Key="separator" />
      <DropdownItem Key="separated link">Separated Link</DropdownItem>
      <DropdownItem Key="separated action" Component="button">Separated Action</DropdownItem>
    </DropdownItems>
  </Dropdown>
</section>

<section class="example-section">
  <Title Size="TitleSizes.Large">With groups</Title>
  <Dropdown IsGrouped="true">
    <Toggle>
      <DropdownToggle id="toggle-id-2">
