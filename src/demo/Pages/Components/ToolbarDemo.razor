@page "/components/toolbar"

<Title HeadingLevel="HeadingLevel.h1" Size="TitleSizes.ExtraLarge4">Toolbar</Title>
<Title HeadingLevel="HeadingLevel.h2" Size="TitleSizes.ExtraLarge">Examples</Title>

<section class="example-section">
  <Title Size="TitleSizes.Large">Items</Title>
  <Toolbar id="Toolbar">
    <ToolbarContent>
      <ToolbarItem>
        <InputGroup>
          <TextInput name="textInput1" id="textInput1" Type="TextInputTypes.Search" aria-label="search input example" />
          <Button Variant="ButtonVariant.Control" aria-label="search button for search input">
            <Icon>
              <SearchIcon />
            </Icon>
          </Button>
        </InputGroup>
      </ToolbarItem>
      <ToolbarItem>
        <Button Variant="ButtonVariant.Secondary">Action</Button>
      </ToolbarItem>
      <ToolbarItem Variant="ToolbarItemVariant.Separator" />
      <ToolbarItem>
        <Button Variant="ButtonVariant.Primary">Action</Button>
      </ToolbarItem>
    </ToolbarContent>
  </Toolbar>
</section>

<section class="example-section">
  <Title Size="TitleSizes.Large">Adjusting item spacers</Title>
  <Toolbar id="toolbar-spacers-1">
    <ToolbarContent>
      <ToolbarItem ToolbarSpacer="@_firstToolbarSpacers">
        <Button Variant="ButtonVariant.Secondary">Action</Button>
      </ToolbarItem>
      <ToolbarItem ToolbarSpacer="@_secondToolbarSpacers">
        <Button Variant="ButtonVariant.Secondary">Action</Button>
      </ToolbarItem>
      <ToolbarItem ToolbarSpacer="@_thirdToolbarSpacers">
        <Button Variant="ButtonVariant.Secondary">Action</Button>
      </ToolbarItem>
      <ToolbarItem ToolbarSpacer="@_fourthToolbarSpacers">
        <Button Variant="ButtonVariant.Secondary">Action</Button>
      </ToolbarItem>
      <ToolbarItem Variant="ToolbarItemVariant.Separator" />
      <ToolbarItem ToolbarSpacer="@_fifthToolbarSpacers">
        <Button Variant="ButtonVariant.Secondary">Action</Button>
      </ToolbarItem>
      <ToolbarItem>
        <Button Variant="ButtonVariant.Primary">Action</Button>
      </ToolbarItem>
      <ToolbarItem Variant="ToolbarItemVariant.Separator" />
      <ToolbarGroup ToolbarSpaceItems="@_toolbarSpaceItems">
        <ToolbarItem>
          <Button Variant="ButtonVariant.Secondary">Action</Button>
        </ToolbarItem>
        <ToolbarItem>
          <Button Variant="ButtonVariant.Secondary">Action</Button>
        </ToolbarItem>
      </ToolbarGroup>
    </ToolbarContent>
  </Toolbar>
</section>

<section class="example-section">
  <Title Size="TitleSizes.Large">Adjusting item widths</Title>
  <Toolbar id="toolbar-widths">
    <ToolbarContent>
      <ToolbarItem Widths="_widths">
        <Button Variant="ButtonVariant.Secondary" IsBlock="true">
          Action
        </Button>
      </ToolbarItem>
    </ToolbarContent>
  </Toolbar>
</section>

<section class="example-section">
  <Title Size="TitleSizes.Large">Adjusting toolbar inset</Title>
  <Toolbar
    id="toolbar-spacers-2"
    Inset="@_inset"
  >
    <ToolbarContent>
      <ToolbarItem>
        <Button Variant="ButtonVariant.Secondary">Action</Button>
      </ToolbarItem>
      <ToolbarItem>
        <Button Variant="ButtonVariant.Secondary">Action</Button>
      </ToolbarItem>
      <ToolbarItem>
        <Button Variant="ButtonVariant.Secondary">Action</Button>
      </ToolbarItem>
      <ToolbarItem>
        <Button Variant="ButtonVariant.Secondary">Action</Button>
      </ToolbarItem>
      <ToolbarItem Variant="ToolbarItemVariant.Separator"></ToolbarItem>
      <ToolbarItem>
        <Button Variant="ButtonVariant.Secondary">Action</Button>
      </ToolbarItem>
      <ToolbarItem>
        <Button Variant="ButtonVariant.Primary">Action</Button>
      </ToolbarItem>
      <ToolbarItem Variant="ToolbarItemVariant.Separator"></ToolbarItem>
      <ToolbarGroup>
        <ToolbarItem>
          <Button Variant="ButtonVariant.Secondary">Action</Button>
        </ToolbarItem>
        <ToolbarItem>
          <Button Variant="ButtonVariant.Secondary">Action</Button>
        </ToolbarItem>
      </ToolbarGroup>
    </ToolbarContent>
  </Toolbar>
</section>

<section class="example-section">
  <Title Size="TitleSizes.Large">Adjusting toolbar inset</Title>
  <Toolbar id="toolbar-group-types">
    <ToolbarContent>
      <ToolbarGroup Variant="ToolbarGroupVariant.FilterGroup">
        @*
        <ToolbarItem>
          <Select
            variant={SelectVariant.single}
            aria-label="Select Input"
            onToggle={this.onFirstToggle}
